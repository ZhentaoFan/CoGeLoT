	"version": "2.0.0",
	"tasks": [
		{
			"label": "Update test coverage",
			"type": "shell",
			"command": "pytest --cov=pokerface --cov-report xml:cov.xml",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}
